  <script>
    (function () {
      var hero = document.getElementById("hero");
      if (!hero || !("IntersectionObserver" in window)) {
        // Fallback: show sticky after a small scroll
        function toggle() {
          document.body.classList.toggle("show-sticky", window.scrollY > 40);
        }
        window.addEventListener("scroll", toggle, { passive: true });
        window.addEventListener("load", toggle);
        toggle();
        return;
      }

      var obs = new IntersectionObserver(function (entries) {
        // Show sticky when hero is NOT intersecting (i.e., user has scrolled past it)
        var isHeroVisible = entries[0] && entries[0].isIntersecting;
        document.body.classList.toggle("show-sticky", !isHeroVisible);
      }, { threshold: 0.05 });

      obs.observe(hero);
    })();
  </script>
